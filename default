# Default server configuration
#
server {
    listen 443 ssl;
    server_name whatslearn.com;

    ssl_certificate /etc/letsencrypt/live/whatslearn.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/whatslearn.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

	location = /favicon.ico {
		alias /home/django/django_projects/whatslearn/media/favicon.ico;
	}
	location = /background.jpg {
		alias /home/django/django_projects/whatslearn/media/background.jpg;
	}
		
    location /static/ {
        alias /home/django/django_projects/whatslearn/static/;
        autoindex off;
    }

    # Serve media files
    location /media/ {
        alias /home/django/django_projects/whatslearn/media/;
        autoindex off;
    }
    location / {
        include proxy_params;
        proxy_pass http://unix:/home/django/django_projects/whatslearn/gunicorn.sock;
    }
}


server {
    listen 80;
    server_name whatslearn.com;
    return 301 https://$host$request_uri;
}